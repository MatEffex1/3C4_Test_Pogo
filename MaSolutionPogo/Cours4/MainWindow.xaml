<Window x:Class="Cours4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cours4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="30">
    <StackPanel>
        <ComboBox x:Name="ComboBoxGroups">
            
        </ComboBox>
        
        <CheckBox x:Name="CheckBoxPogo" Checked="CheckBox_Checked">Pogo</CheckBox>
        <CheckBox>Pogo</CheckBox>
        
        <ToggleButton>Patate</ToggleButton>
        <ToggleButton>Patate</ToggleButton>
        
        <RadioButton x:Name="RadioButtonPoutine" GroupName="Food" Checked="RadioButtonFood_Checked">Poutine</RadioButton>
        <RadioButton x:Name="RadioButtonPepsi" GroupName="Drink" Checked="RadioButtonFood_Checked">Pepsi</RadioButton>
        <RadioButton x:Name="RadioButtonScrap" GroupName="Food" Checked="RadioButtonFood_Checked">Scrap</RadioButton>
    </StackPanel>
</Window>
